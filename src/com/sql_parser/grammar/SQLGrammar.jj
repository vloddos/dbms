SKIP:
{
    "\n"
    | "\r"
    | "\r\n"
    | "\\"
    | "\t"
    | " "
}

SPECIAL_TOKEN:
{
    <LINE_COMMENT: "--"(~["\r","\n"])*>
    | <MULTI_LINE_COMMENT: "/*" (~["*"])* "*" ("*" | (~["*","/"] (~["*"])* "*"))* "/">
}

//KEYWORDS
TOKEN:
{
    <CREATE: "CREATE ">
    | <DATABASE: "DATABASE ">
    | <DROP: "DROP ">
    | <EXIT: "EXIT">
    | <FROM: "FROM ">
    | <INSERT_INTO: "INSERT INTO ">
    | <LIMIT: "LIMIT ">
    | <OFFSET: "OFFSET ">
    | <SELECT: "SELECT ">
    | <SHOW: "SHOW ">
    | <TABLE: "TABLE ">
    | <USE: "USE ">
    | <VALUES: "VALUES ">
    | <WHERE: "WHERE ">
}

//DATA TYPES
TOKEN:
{
    <DATA_TYPE:
    "CHAR"
    | "INT"
    | "LONG"
    | "VARCHAR"
    >
}

//LITERALS
TOKEN:
{
    <INTEGER_LITERAL:(["0"-"9"])+>
    | <FLOATING_POINT_LITERAL:(["0"-"9"])+"."(["0"-"9"])+(<EXPONENT>)?
    | "."(["0"-"9"])+(<EXPONENT>)?
    | (["0"-"9"])+<EXPONENT>
    | (["0"-"9"])+(<EXPONENT>)?>
    | <#EXPONENT:["e", "E"](["+", "-"])?(["0"-"9"])+>
    | <STRING_LITERAL: (["a" - "z", "_", "0"-"9", "-", "@", "."])+>
}

//SEPARATORS AND OPERATORS
TOKEN:
{
    <SEMICOLON: ";">
    | <OPEN_BRACKET: "(">
    | <CLOSE_BRACKET: ")">
    | <COMMA: ",">
}

void parse() throws Exception:
{}
{
    parseShowCreateTable()
    |
    parseCreateTable()
    |
    parseExit()
    /*|
    parseDropDatabase()
    |
    parseDropTable()*/
    |
    parseCreateDatabase()
    |
    parseUseDatabase()
    |
    <EOF>
}

void parseUseDatabase() throws Exception:
{
    Token name, command;
}
{
    command = <USE><DATABASE>
    name = <STRING_LITERAL>
    <SEMICOLON>
    {System.out.println("THIS IS COMMAND: " + command.image);}
    {
        DataBases.useDataBase(name.image);
    }
    [parse()]
}

void parseCreateDatabase() throws Exception:
{
    Token name, command;
}
{
    command = <CREATE><DATABASE>
    name = <STRING_LITERAL>
    <SEMICOLON>
    {System.out.println("THIS IS COMMAND: " + command.image);}
    {
        DataBases.createDataBase(name.image);
    }
    [parse()]
}
